{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "AutofacIoC",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build_AutofacIoC",
            "program": "${workspaceFolder}/AutofacIoC/bin/Debug/net5.0/AutofacIoC.dll",
            "args": [],
            "cwd": "${workspaceFolder}/AutofacIoC",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/AutofacIoC/Views"
            }
        },
        {
            "name": "GraphQL.NetCore.Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build_GraphQL.NetCore.Api",
            "program": "${workspaceFolder}/GraphQL.NetCore.Api/bin/Debug/net5.0/GraphQL.NetCore.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/GraphQL.NetCore.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/GraphQL.NetCore.Api/Views"
            }
        },
    {
        "name": "AssemblyInfoCollecting",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build_AssemblyInfoCollecting",
        "program": "${workspaceFolder}/AssemblyInfoCollecting/bin/Debug/net5.0/AssemblyInfoCollecting.dll",
        "args": [],
        "cwd": "${workspaceFolder}/AssemblyInfoCollecting",
        "stopAtEntry": false,
        "console": "internalConsole"
    },
    {
        "name": "Graphs",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build_Graphs",
        "program": "${workspaceFolder}/Graphs/bin/Debug/net5.0/Graphs.dll",
        "args": [],
        "cwd": "${workspaceFolder}/Graphs",
        "stopAtEntry": false,
        "console": "internalConsole"
    },
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
            "name": "DynamicObjectMapper",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build_DynamicObjectMapper",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/DynamicObjectMapper/bin/Debug/net5.0/DynamicObjectMapper.dll",
            "args": [],
            "cwd": "${workspaceFolder}/DynamicObjectMapper/",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}